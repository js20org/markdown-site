{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "verbatimModuleSyntax": true,
        "strict": true,
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": ["node"]
    },
    "include": ["src", "src-test"],
    "exclude": ["node_modules"]
}
